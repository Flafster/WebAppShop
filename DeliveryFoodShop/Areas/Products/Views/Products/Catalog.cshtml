@{
}

@model List<Product>


<div class="d-inline">
    <div class="nav justify-content-center">
        <div>
            <a class="btn btn-light" style="margin-left:10px" asp-route-categiry="men's clothing" asp-area="Products" asp-controller="Products" asp-action="Category">Men's clothing</a>
        </div>
        <div>
            <a class="btn btn-light" style="margin-left:10px" asp-route-categiry="jewelery" asp-area="Products" asp-controller="Products" asp-action="Category">Jewelery</a>
        </div>
        <div>
            <a class="btn btn-light" style="margin-left:10px" asp-route-categiry="electronics" asp-area="Products" asp-controller="Products" asp-action="Category">Electronics</a>
        </div>
        <div>
            <a class="btn btn-light" style="margin-left:10px" asp-route-categiry="women's clothing" asp-area="Products" asp-controller="Products" asp-action="Category">Women's clothing</a>
        </div>
    </div>
</div>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="column col-md-3 p-3">
            <div class="text-center" style="height:250px">
                <div class="d-flex justify-content-center">
                    <img src="@item.Image" style="width:50%">
                </div>
            </div>
            <div class="text-center" style="height:90px">
                <p class="card-title">@item.Name</p>
            </div>
            <div class="text-end" style="height:50px">
                <b >@item.Price $</b>
            </div>
            <div>
                <a class="btn btn-primary w-100" asp-route-id="@item.Id" asp-area="Products" asp-controller="Products" asp-action="AddInShoppingCard">Add to cart</a>
            </div>
        </div>
    }
</div>